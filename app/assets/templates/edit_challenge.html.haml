%form
  %label{ :for => 'title' } Title
  %input{ :type => 'text', :name => 'title', 'ng-model' => 'challenge.title' }
  %label{ :for => 'content' } Content
  %textarea#content{ 'ng-model' => 'challenge.content', :style => 'display:none' }
  #editor
  .form-actions
    %button.btn.btn-primary{ :type => 'submit', 'ng-click' => 'edit()' } Save
    %button.btn{ :type => 'submit', 'ng-click' => 'cancel()' } Cancel
